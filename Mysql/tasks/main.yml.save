---
- name: Installing Mysql  and dependencies
  apt:
    name: "{{item}}      state: present
      update_cache: yes
    loop:
      - mysql-server
      - mysql-client 
      - python3-mysqldb
      - libmysqlclient-dev
    become: yes
- name: start and enable mysql service
    service:
      name: mysql
      state: started
      enabled: yes
- name: creating mysql user ()
    mysql_user:
      name: "{{ mysql_app_user }}"
      password: "{{ mysql_app_pass }}"
      priv: '*.*:ALL'
      host: '%'
      state: present
- name: creating mini-project_db
    mysql_db:
      name: "{{ mysql_app_db }}"
      state: present
- name: Enable remote login to mysql
    lineinfile:
      path: /etc/mysql/mysql.conf.d/mysqld.cnf
      regexp: '^bind-address'
      line: 'bind-address = 0.0.0.0'
      backup: yes
    notify:
       - Restart mysql
